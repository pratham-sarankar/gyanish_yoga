<section class="small_pb formPopup">
  <div class="formclose">
    <i class="ri-close-line"></i>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="heading_s2">
          <h5>Enter your Login details here</h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="field_form icon_form">
          <form action="/users/login" method="post">
            <div class="row">
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-mobile"></i>
                  </span>
                  <input
                    placeholder="Enter Mobile No."
                    class="form-control"
                    name="phone"
                    type="text"
                  />
                </div>
              </div>
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-key"></i>
                  </span>
                  <input
                    placeholder="Enter Password"
                    class="form-control"
                    name="password"
                    type="password"
                  />
                </div>
              </div>

              <div class="col-lg-12">
                <input type="submit" value="login" class="btn btn-default" />
              </div>
              <div class="form-group col-md-12 mt-4">
                <div class="chek-form">
                  <label class="dontHaveAccount">
                    Don't have Account ?
                    <span class="text_default" style="cursor: pointer"
                      >Create One here</span
                    ></label
                  >
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="small_pb registerForm">
  <div class="formclose">
    <i class="ri-close-line"></i>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="heading_s2">
          <h5>Register your details here</h5>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="field_form icon_form">
          <form action="/users/register" method="post">
            <div class="row">
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-user"></i>
                  </span>
                  <input
                    placeholder="Enter Your Name"
                    class="form-control"
                    name="name"
                    type="text"
                  />
                </div>
              </div>
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-email"></i>
                  </span>
                  <input
                    placeholder="Enter Email address"
                    class="form-control"
                    name="email"
                    type="email"
                  />
                </div>
              </div>
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-mobile"></i>
                  </span>
                  <input
                    placeholder="Enter Mobile No."
                    class="form-control"
                    name="phone"
                    type="text"
                  />
                </div>
              </div>
              <div class="form-group col-md-12">
                <div class="form-input">
                  <span>
                    <i class="ti-key"></i>
                  </span>
                  <input
                    id="id_password"
                    placeholder="Enter Password"
                    class="form-control"
                    name="password"
                    type="password"
                  />
                  <div class="passwordEye">
                    <i
                      class="far fa-eye fa-eye-slash"
                      id="togglePassword"
                      style="cursor: pointer"
                    ></i>
                  </div>
                </div>
              </div>

              <div class="col-lg-12">
                <input type="submit" value="Register" class="btn btn-default" />
              </div>
              <div class="form-group col-md-12 mt-4">
                <div class="chek-form">
                  <div class="custome-checkbox">
                    <label class="alreadyHaveAccount">
                      Already have an Account ?
                      <span class="text_default" style="cursor: pointer"
                        >login here</span
                      ></label
                    >
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
